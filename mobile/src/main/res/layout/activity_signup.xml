<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_baby2">

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/id_et"
        android:hint="아이디를 입력해주세요"
        style="@style/EditTextCustomHolo"
        android:textColorHint="@color/real_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="57dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_et"
        android:hint="비밀번호를 입력해주세요"
        style="@style/EditTextCustomHolo"
        android:textColorHint="@color/real_white"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/id_et"
        android:layout_alignLeft="@+id/id_et"
        android:layout_alignStart="@+id/id_et"
        android:layout_alignRight="@+id/id_et"
        android:layout_alignEnd="@+id/id_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_confirm_et"
        android:hint="비밀번호를 확인해주세요"
        style="@style/EditTextCustomHolo"
        android:textColorHint="@color/real_white"
        android:layout_below="@+id/password_et"
        android:layout_alignLeft="@+id/password_et"
        android:layout_alignStart="@+id/password_et"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/password_et"
        android:layout_alignEnd="@+id/password_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_et"
        android:hint="이메일을 입력해주세요"
        android:textColorHint="@color/real_white"
        android:layout_marginTop="25dp"
        style="@style/EditTextCustomHolo"
        android:layout_below="@+id/password_confirm_et"
        android:layout_alignLeft="@+id/password_confirm_et"
        android:layout_alignStart="@+id/password_confirm_et"
        android:layout_alignRight="@+id/password_confirm_et"
        android:layout_alignEnd="@+id/password_confirm_et" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:id="@+id/signup_btn"
        android:background="@drawable/custom_border"
        android:layout_below="@+id/email_et"
        android:layout_alignLeft="@+id/email_et"
        android:layout_alignStart="@+id/email_et"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="취소하기"
        android:id="@+id/cancel_btn"
        android:background="@drawable/custom_border"
        android:layout_alignBottom="@+id/signup_btn"
        android:layout_alignRight="@+id/email_et"
        android:layout_alignEnd="@+id/email_et" />
</RelativeLayout>
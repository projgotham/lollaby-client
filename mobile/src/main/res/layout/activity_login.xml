<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_baby2">

    <!--ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_baby"
        android:scaleType="centerCrop"/-->

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/id_et"
        android:hint="아이디 입력"
        style="@style/EditTextCustomHolo"
        android:textColorHint="@color/real_white"
        android:textColorHighlight="@color/real_white"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="비밀번호 입력"
        style="@style/EditTextCustomHolo"
        android:textColorHint="@color/real_white"
        android:textColorHighlight="@color/real_white"
        android:layout_above="@+id/login_btn"
        android:layout_alignRight="@+id/login_btn"
        android:layout_alignEnd="@+id/login_btn" />

    <Button
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:text="로그인"
        android:background="@drawable/custom_border"
        android:id="@+id/login_btn"
        android:layout_above="@+id/signup_btn"
        android:layout_alignRight="@+id/signup_btn"
        android:layout_alignEnd="@+id/signup_btn" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입하기"
        android:id="@+id/signup_btn"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/id_et"
        android:layout_alignEnd="@+id/id_et"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo_image2"
        android:padding="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scrollbars="none">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="335dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/background_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal400">

            <TextView
                android:id="@+id/baby_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby Name"
                android:textSize="30dp"
                android:textColor="@color/real_white"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/baby_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도 : 0.0 C"
                android:textSize="20dp"
                android:textColor="@color/real_white"
                android:layout_above="@+id/baby_humidity"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/baby_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="습도 : 26%"
                android:textSize="20dp"
                android:textColor="@color/real_white"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/baby_pressure"
                android:layout_alignEnd="@+id/baby_pressure" />

            <TextView
                android:id="@+id/baby_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="압력 : 정상"
                android:textSize="20dp"
                android:textColor="@color/real_white"
                android:layout_below="@+id/baby_humidity"
                android:layout_alignRight="@+id/baby_name"
                android:layout_alignEnd="@+id/baby_name" />

            <TextView
                android:id="@+id/baby_noise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소음 : 정상"
                android:textSize="20dp"
                android:textColor="@color/real_white"
                android:layout_below="@+id/baby_pressure"
                android:layout_alignRight="@+id/baby_humidity"
                android:layout_alignEnd="@+id/baby_humidity" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/baby_status_image"
                android:src="@drawable/baby_happy"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_above="@+id/baby_noise"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
